{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [ "config:recommended" ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:daily"]
  },
  "helm-values": {
    "fileMatch": ["\\.yaml$"]
  },
  "docker": {
    "enabled": true
  },
  "nix": {
    "enabled": true
  }
}
